{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Lex Machina",
  "version": "0.1.0",
  "identifier": "com.lexmachina.dev",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Lex Machina",
        "width": 1080,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "theme": "Dark",
        "center": true,
        "backgroundThrottling": "disabled",
        "backgroundColor": "000",
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
